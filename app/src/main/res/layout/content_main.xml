<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tylorlilley.kbrandomizer3.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/board_setup_label"
            android:id="@+id/boardLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:foregroundGravity="center"
            android:showDividers="middle"
            android:textAlignment="center"
            android:layout_margin="2dp"
            android:stretchColumns="*"
            android:background="#ffffff"
            android:shrinkColumns="2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Quadrant 1"
                    android:id="@+id/quadrant1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:editable="false"
                    android:elegantTextHeight="false"
                    android:foregroundGravity="center"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:autoText="false"
                    android:maxLines="2"
                    android:ellipsize="none"
                    android:layout_weight="1"
                    android:minLines="2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Quadrant 2"
                    android:id="@+id/quadrant2"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#ffffff"
                    android:maxLines="2"
                    android:ellipsize="none"
                    android:layout_weight="1"
                    android:minLines="2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Quadrant 3"
                    android:id="@+id/quadrant3"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#ffffff"
                    android:maxLines="2"
                    android:ellipsize="none"
                    android:layout_weight="1"
                    android:minLines="2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Quadrant 4"
                    android:id="@+id/quadrant4"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#ffffff"
                    android:maxLines="2"
                    android:ellipsize="none"
                    android:layout_weight="1"
                    android:minLines="2" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Quadrant 5"
                    android:id="@+id/quadrant5"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#a7ffeb"
                    android:maxLines="2"
                    android:ellipsize="none"
                    android:layout_weight="1"
                    android:minLines="1" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/kingdom_cards_label"
            android:id="@+id/cardLabel" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_margin="2dp"
            android:background="#ffffff">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Card 1"
                    android:id="@+id/card1"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#ffffff"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Card 2"
                    android:id="@+id/card2"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#ffffff"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Card 3"
                    android:id="@+id/card3"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#ffffff"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Card 4"
                    android:id="@+id/card4"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#ffffff"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Card 5"
                    android:id="@+id/card5"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#ffffff"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Card 6"
                    android:id="@+id/card6"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#ffffff"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Card 7"
                    android:id="@+id/card7"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#ffffff"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Card 8"
                    android:id="@+id/card8"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#ffffff"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Card 9"
                    android:id="@+id/card9"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="#ffffff"
                    android:layout_weight="1"
                    android:visibility="gone" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</RelativeLayout>
